<div class="tabs-content">
     <% @digests.each_index do |i| %>

      <% active = (i == @active_digest_index ) %>
      <% active_class= (active ? 'active' : '') %>

      <% digest = @digests[i] %>

      <div class="content <%= active_class %>" id="digest_<%= i %>">
        <% if active %>
            <%= render("digest_rails/shared/tabs_content_active") %>
        <% else %>
            <p>Please wait a moment...</p>
        <% end %>
      </div>

  <% end %>
</div>