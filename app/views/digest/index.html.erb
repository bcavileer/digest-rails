<% content_for :user_header do %>
<header id="header" class="row">
  <div class="large-12 columns">
    <hr/>
    <div class="row">
      <div class="large-6 columns">
        <ul class="inline-list right">

          <h1><%= @digest_name %> </h1>

          <table border='1'>
            <tr>
              <% @digest_manifest['identifier_descriptors'].each do |descriptor| %>
                <td><%= descriptor["digest_hash_key"].split('/').last%></td>
              <% end %>
              </td>
            </tr>
            <% @digest_core_instances.each do |instance| %>
                <tr>
                  <% @digest_manifest['identifier_descriptors'].each do |descriptor| %>
                      <td><%= instance[descriptor["digest_hash_key"]][:identifier]%></td>
                  <% end %>
                  <td><%= link_to 'Core', 'l' %></td>
                 </tr>
            <% end %>
          </table>
          <br />
          <%= link_to 'All', @digests_url %>
        </ul>
      </div>
    </div>
  </div>
</header>
<% end %>