<!DOCTYPE html>
<html lang="en">
<head>

  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "foundation-rails" %></title>

  <%= stylesheet_link_tag    "handsontable" %>
  <%= stylesheet_link_tag    "authorization" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>

</head>

<body id="page" class="off-canvas hide-extras">

<div class="container">

  <header id="header" class="row">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><%= link_to 'Rules', authorization_ui_rules_path, :remote => true %></li>
            <li><%= link_to 'User>Rule', authorization_ui_user_rule_path, :remote => true %></li>
            <li><%= link_to 'RuleSet', authorization_ui_ruleset_path, :remote => true %></li>
            <li><%= link_to 'RuleSet>Rule', authorization_ui_ruleset_rule_path, :remote => true %></li>
            <li><%= link_to 'User>RuleSet', authorization_ui_user_ruleset_path, :remote => true %></li>
            <li><%= link_to 'Transition', authorization_ui_transition_path, :remote => true %></li>
          </ul>
        </div>
      </div>
    </div>
  </header>

  <div id="markup" ></div>

  <div id="data" >

    <div class = 'hide' id="data_links">
      <a class="rules" href="<%=authorization_data_rules_path%>">Rules</a>
      <a class="users" href="<%=authorization_data_users_path%>">Users</a>
      <a class="rulesets" href="<%=authorization_data_rulesets_path%>">Rulesets</a>
    </div>

  </div>

  <footer class="row">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-6 columns">
          <p>&copy; Copyright Holman.</p>
        </div>
      </div>
    </div>
  </footer>

</div>

<%= javascript_include_tag "authorization" %>
<%= javascript_include_tag "handsontable" %>

<script>
    $(".hide").hide();
    <%= yield :script %>
    $(document).foundation({
        tab: {
            callback : function (tab) {
                console.log(tab);
            }
        }
    });
</script>

</body>

</html>
